{
  "name": "import-xml-electron-app",
  "version": "1.1.0",
  "main": "dist/main.js",
  "author": "SSParisi Software",
  "description": "Sistema importador de XMLs de notas fiscais para os sistemas SSParisi",
  "scripts": {
    "build": "rimraf dist && tsc && copyfiles -u 1 \"src/**/*.html\" \"src/**/*.css\" \"src/**/*.json\" \"src/**/*.png\" dist/",
    "start": "electron dist/main.js",
    "bs": "yarn build && yarn start",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "upload": "yarn build && yarn dist && gh release create $(date +%Y%m%d%H%M%S) $(find ./release -type f -name '*.exe' -o -name '*.AppImage' -o -name '*.snap' -o -name '*.zip') --repo rrgoncalves/import-xml --title 'Release $(date +%Y-%m-%d_%H-%M-%S)' --notes 'Build autom√°tico'"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "electron-updater": "^5.4.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.6.0",
    "typescript": "^5.0.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.ssparisi.import-xml",
    "productName": "ImportXML",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "rrgoncalves",
        "repo": "import-xml"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ]
    }
  }
}