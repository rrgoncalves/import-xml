{
  "name": "import-xml-electron-app",
  "version": "1.1.2",
  "main": "dist/main.js",
  "author": "SSParisi Software",
  "description": "Sistema importador de XMLs de notas fiscais para os sistemas SSParisi",
  "scripts": {
    "build": "rimraf dist && tsc && copyfiles -u 1 \"src/**/*.html\" \"src/**/*.css\" \"src/**/*.json\" \"src/**/*.png\" dist/",
    "debug": "yarn build && tsc --watch",
    "start": "electron dist/main.js",
    "bs": "yarn build && yarn start",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "upload": "yarn build && yarn dist && gh release create $(date +%Y%m%d%H%M%S) $(find ./release -type f -name '*.exe' -o -name '*.AppImage' -o -name '*.snap' -o -name '*.zip') --repo rrgoncalves/import-xml --title 'Release $(date +%Y-%m-%d_%H-%M-%S)' --notes 'Build autom√°tico'"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.862.0",
    "axios": "^1.6.8",
    "chokidar": "^4.0.3",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.6.7",
    "fast-glob": "^3.3.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^2.0.4",
    "@types/axios": "^0.14.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^9.2.0",
    "copyfiles": "^2.4.1",
    "electron": "^29.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-rulesdir": "^0.2.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.ssparisi.import-xml",
    "productName": "ImportXML",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "publish": null,
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
